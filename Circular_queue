#include<stdio.h>
#include<stdlib.h>
#define size 4
int front = 0, rear = 0, qc[size];
int insert();
int deli();
int display();
int main()
{
    int choice;
    printf("1:\tInsert\n2:\tDelete\n3:\tDisplay\n4:\tExit\n");
    while(1)
    {
        printf("Enter your choice:\t");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1: insert();
                break;
            case 2: deli();
                break;
            case 3: display();
                break;
            case 4: exit(0);
                break;
            default: printf("Invalid!");
                break;
        }
    }
    return 0;
}

int insert()
{
    if((front == 0) && (rear == size-1) || (front==rear+1))
    {
        printf("Queue is full\n");
    }
    else
    {
        printf("\nEnter the number to insert:\t");
        scanf("\n%d",&qc[rear]);
        rear  = (rear+1)%size ;
    }
    return 0;
}
int deli()
{
    if(front == rear)
    {
        printf("\nNothing to delete\n");
    }
    else
    {
        printf("\nDeleting %d\n", qc[front]);
        front = (front+1)%size;
    }
    return 0;
}
int display(int i)
{
    if(front==rear)
    {
        printf("Nothing to display");
    }
    else
    {
        if(front<rear)
        {
            for(i=front;i<rear+1;i++)
            {
                printf("\n%d", qc[i]);
            }
        }
        else
        {
            for(i=front;i<size-1;i++)
            {
                printf("\n%d",qc[i]);
            }
            for(i=0; i<rear+1;i++)
            {
                printf("\n%d",qc[i]);
            }
        }
    }
    return 0;
}
